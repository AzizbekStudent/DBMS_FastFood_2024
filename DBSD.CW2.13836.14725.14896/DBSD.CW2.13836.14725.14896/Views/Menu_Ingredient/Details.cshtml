@model FastFood.DAL.Models.Menu_Ingredients

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Menu_Ingredients</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Meal Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Meal_title)
        </dd>
        <dt class="col-sm-2">
            Meal Ingredients list
        </dt>
        <dd class="col-sm-10">
            <select id="ingredientDropdown" class="form-control"  >
                @foreach (var ingredient in Model.IngredinetList)
                {
                    <option value="@ingredient.ingredient_ID">@ingredient.Title</option>
                }
            </select>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.meal_ID  }) |
    <a asp-action="Index">Back to List</a>
</div>
