@model FastFood.DAL.Models.Menu_Ingredients

@{
    ViewData["Title"] = "DeleteConfirmation";
}

<h1>DeleteConfirmation</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Menu_Ingredients</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Meal Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.Meal_title)
        </dd>
        <dt class="col-sm-2">
            Meal Ingredients list
        </dt>
        <dd class="col-sm-10">
            <select id="ingredientDropdown" class="form-control" onchange="updateIngredient()">
                @foreach (var ingredient in Model.IngredinetList)
                {
                    <option value="@ingredient.ingredient_ID">@ingredient.Title</option>
                }
            </select>
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmation">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
