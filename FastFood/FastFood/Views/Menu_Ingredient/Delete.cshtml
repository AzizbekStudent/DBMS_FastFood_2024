@model FastFood.DAL.Models.Menu_Ingredients

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Menu_Ingredients</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Meal Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.Meal_title)
        </dd>
        <dt class="col-sm-2">
            Meal Ingredients list
        </dt>
        <dd class="col-sm-10">
            <table>
                <thead>
                    <tr>
                        <th>Ingredient ID</th>
                        <th>Ingredient Title</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ingredient in Model.IngredinetList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => ingredient.ingredient_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => ingredient.Title)
                            </td>
                            <td>
                                <form asp-action="DeleteConfirmation" method="post">
                                    <input type="hidden" name="mealId" value="@Model.meal_ID" />
                                    <input type="hidden" name="ingredientId" value="@ingredient.ingredient_ID" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>
    </dl>
    <a asp-action="Index">Back to List</a>
</div>




