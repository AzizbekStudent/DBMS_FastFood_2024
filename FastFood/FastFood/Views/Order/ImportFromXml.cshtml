@model IEnumerable<FastFood.DAL.Models.Order>

@{
    ViewData["Title"] = "ImportFromXml";
}

<h1>Import From Xml</h1>
@Html.ActionLink("Go to Orders page", "Index", "Order", null, new { @class = "btn btn-success mt-3 mb-3" })
<div class="row">
    <div class="col-md-4">
        <form asp-action="ImportFromXml" enctype="multipart/form-data">
            <div class="form-group">
                <lable name="importFile" class="control-label mt-3 mb-3"> XML File</lable>
                <input name="importFile" class="form-control mb-3" type="file" />
            </div>

            <div class="form-group">
                <input type="submit" value=" Import " class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.order_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal.Meal_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.FName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meal.Meal_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.FName)
            </td>
            <td>
                    @Html.ActionLink("Details", "Details", new { id = item.order_ID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}
    </tbody>
</table>
